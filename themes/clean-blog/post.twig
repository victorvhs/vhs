<!DOCTYPE html>
<html lang="en">
  {% include "head.twig" %}
<body>

    <!-- Navigation -->
{% include "menu.twig" %}

    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: {% if meta.img %} url({{ meta.img }}) {% else %} url('{{ theme_url }}/img/post-bg.jpg'){% endif %};">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ meta.title }}</h1>
                        <h2 class="subheading">{{ meta.description }}</h2>
                        <span class="meta">Posted by <a href="{{ meta.profile }}">{{ meta.author }}</a> on {{ meta.date }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
					{{ content }}
                </div>
            </div>
        </div>
    </article>

    <hr>

    <!-- Footer -->
    {% include "footer.twig" %}

</body>

</html>
